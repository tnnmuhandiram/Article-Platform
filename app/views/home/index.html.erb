  <!-- Change Import Type Form -->
  

  <script>
  
  //change Import type form when selected 
  $("#importType").on('change', function() {
    $.ajax({
      type: "GET", 
      url: "/select-type",
      data: {'type':this.value},
    success: function(result){
      $("#apiImportTypeDiv").html(result);
    },
      error: function(jqXHR, textStatus, errorThrown){}
    });
  });

  //load single article
  $('.article-readmore-btn').click(function(){
    var article_id = $(this).data('id');
    $.ajax({
      type: "GET", 
      url: "/article/show",
      data: {'article_id':article_id},
    success: function(result){
      $("#single-article-body").html(result);
    },
      error: function(jqXHR, textStatus, errorThrown){}
    });
  });

  //load datepicker 
  $('.datepicker').each(function(){
    $(this).datepicker();
  });

  </script>
